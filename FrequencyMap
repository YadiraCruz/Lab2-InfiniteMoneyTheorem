import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;
import java.util.Random; 
import java.io.*;
import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class FrequencyMap {
	
	
	String FILE_AS_STRING = "";
	
	public FrequencyMap(){
		
	}
	
	
	public void readFile() {
		Scanner userFile = new Scanner(System.in);
		System.out.println("Enter file to read: ");
		
		String fileName = userFile.nextLine();
		
		File file = new File(fileName);
		Scanner fileReader;
		
		try {
			fileReader = new Scanner(file);
			while (fileReader.hasNextLine()) {
				String line = fileReader.nextLine();
				FILE_AS_STRING += line + System.lineSeparator();
			}	
		} catch(FileNotFoundException e) {
			e.printStackTrace();
		}
		
	}//End of readFile
	
	
	
	public String toString() {
		return FILE_AS_STRING;
	}
	
	

	
	public String getValueOfK() {
		Scanner userInput = new Scanner(System.in);
		System.out.println("Please enter two characters as your K value: ");
		String kValue = userInput.nextLine();
		return kValue;
	}
	
	
	
	public void createMap() {
		
	}
	

	
}//End of Class
